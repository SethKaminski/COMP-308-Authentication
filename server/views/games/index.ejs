<% include ../partials/header.ejs %>
<div class="panel-body">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <h3 >Games</h3>

    <a class="btn btn-info" href="games/add %>" role="button"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </a>

    <table class="table table-hover">
      <tr>
        <th> # </th>
        <th> Name </th>
        <th> Rating </th>
        <th> Cost </th>
        <th> Edit </th>
        <th> Delete </th>
      </tr>
      <% for (let count = 0; count < games.length; count++) { %>
        <tr>
          <th> <%=count+1%> </th>
          <td> <%=games[count].name %> </td>
          <td> <%=games[count].rating %> </td>
          <td> <%=games[count].cost %> </td>
          <td> <a class="btn btn-info" href="games/edit/<%=games[count]._id %>" role="button"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a> </td>
          <td> <a class="btn btn-danger" href="games/delete/<%=games[count]._id %>" role="button">  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>  </a> </td>
        </tr>
      <% } %>
    </table>
  </div>
</div>
<% include ../partials/footer.ejs %> 