<% include ../partials/header.ejs %>
<div class="panel-body">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    
    
    <div class="pull-left">
        <h3 >Contacts</h3>
    </div>

    <div class="pull-right">
        <p></p>
        <a class="btn btn-info" href="contacts/add %>" role="button"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </a>
    </div>
    
    <table class="table table-hover">
      <tr>
        <th> Name </th>
        <th> Number </th>
        <th> Email </th>
        <th> Edit </th>
        <th> Delete </th>
      </tr>
      <% for (let count = 0; count < contacts.length; count++) { %>
        <tr>
          <td> <%=contacts[count].name %> </td>
          <td> <%=contacts[count].number %> </td>
          <td> <%=contacts[count].email %> </td>
          <td> <a class="btn btn-info" href="contacts/edit/<%=contacts[count]._id %>" role="button"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a> </td>
          <td> <a class="btn btn-danger" href="contacts/delete/<%=contacts[count]._id %>" role="button">  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>  </a> </td>
        </tr>
      <% } %>
    </table>
  </div>
</div>
<% include ../partials/footer.ejs %> 